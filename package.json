{
  "name": "oidc-node-web",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev:https": "next dev --experimental-https",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "mock:op": "tsx mocks/server.ts",
    "test": "vitest",
    "certs:gen": "tsx scripts/generate-certs.ts",
    "prepare": "husky",
    "docker:build": "docker build -t oidc-node-web:latest .",
    "docker:run": "docker run --rm -p 3000:3000 --env-file .env oidc-node-web:latest",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "jose": "^5.9.6",
    "next": "^15.1.3",
    "openid-client": "^6.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/selfsigned": "^2.1.0",
    "autoprefixer": "^10.4.23",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "^15.1.3",
    "express": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "selfsigned": "^5.4.0",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "next lint --fix"
    ]
  }
}
